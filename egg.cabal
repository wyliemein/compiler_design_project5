name:                egg
version:             0.1.0.0
synopsis:            Starter code for compiler-fer-de-lance
license:             MIT
license-file:        LICENSE
author:              Ranjit Jhala
maintainer:          jhala@cs.ucsd.edu
category:            Language
build-type:          Simple
cabal-version:       >=1.10

data-files:
  tests/adder.json,
  tests/boa.json,
  tests/cobra.json,
  tests/diamondback.json,
  tests/anf.json,
  tests/egg.json,
  tests/yourTests.json

Library
  ghc-options:         -W -Wall -threaded
  exposed-modules:     Language.Egg.Utils,
                       Language.Egg.UX,
                       Language.Egg.Types,
                       Language.Egg.Parser,
                       Language.Egg.Checker,
                       Language.Egg.Normalizer,
                       Language.Egg.Asm,
                       Language.Egg.Compiler,
                       Language.Egg.Label,
                       Language.Egg.Runner


  -- other-extensions:
  build-depends:       array, base,
                       containers,
                       pretty,
                       cmdargs,
                       process,
                       directory,
                       filepath,
                       semigroups,
                       megaparsec,
                       tasty,
                       tasty-hunit,
                       tasty-rerun,
                       process,
                       text

  hs-source-dirs:      lib
  default-language:    Haskell2010

Executable egg 

  default-language:    Haskell2010
  ghc-options:         -W -threaded
  main-is:             Main.hs
  hs-source-dirs:      bin
  build-depends:       base,
                       egg 

test-suite test
  default-language: Haskell98
  type:             exitcode-stdio-1.0
  hs-source-dirs:   tests
  ghc-options:      -threaded -Wall
  main-is:          Test.hs
  other-modules:    Common,
                    Paths_egg
  build-depends:    base,
                    directory,
                    filepath,
                    process,
                    tasty,
                    tasty-hunit,
                    tasty-rerun,
                    text,
                    unordered-containers,
                    egg,
                    json,
                    stm,
                    mtl,
                    tagged,
                    containers

Executable anf

  default-language:    Haskell2010
  ghc-options:         -W -threaded -rtsopts
  main-is:             AnfMain.hs
  hs-source-dirs:      bin
  build-depends:       base,
                       egg
